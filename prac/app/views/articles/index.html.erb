    <%= tinymce_assets %>
<div id="user-widget">
<% if current_user.blank? %>
  <%= link_to 'Sign In with Github', '/auth/github' %>
<% else %>
  <p>
    You are signed in as <%= current_user.username %>.  Click the button below to sign out.
  </p>

  <%= button_to "Sign Out", signout_path, method: :delete %>
<% end %>
</div>
  <h1 id="article_heading">Listing articles</h1>
    <div id="new_article"><%= link_to 'New Article', new_article_path %></div>
    <table>
      <tr>
        <th class="index_heading">Title</th>
        <th class="index_heading">Author</th>
        <th colspan="4"></th>
      </tr>

      <% @article.each do |article| %>
        <tr>
          <td id="index_value" class="col-md-2"><%=article.title%> </td>
          <td id="index_value" class="col-md-2"><%= article.user.try(:email) %></td>
        <td><%= link_to '<button class="btn btn-info">Show</button>'.html_safe , article_path(article) %></td>
        <% if user_signed_in? && article.user_id == current_user.id %>
          <td><%= link_to '<button class="btn btn-warning">Edit</button>'.html_safe , edit_article_path(article) %></td>
		      <td><%= link_to '<button class="btn btn-danger">Delete</button>'.html_safe ,article_path(article), method: :delete, data: {confirm: 'are you sure?'}%></td>
        <%end%>
        </tr>
      <%end%>
</table>
  