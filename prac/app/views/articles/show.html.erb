<div class = "container">
	<h1><strong> Title :  </strong></h1>
	<p><%= @article.title %></p>

	<h1><strong> Text: </strong></h1>
	<p> <%=@article.text %></p>
	<%=render 'comments' %>
	<h2> Add comments </h2>
	<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
	<%= f.label :commenter %><br>
	<%= f.text_field :commenter %>
	</p>
	<p>
		<%=f.label :body %><br>
		<%= f.text_area :body%>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<%end%>
</div>
<%= link_to 'Edit' , edit_article_path(@article) %>
<%= link_to 'All' , articles_path %>